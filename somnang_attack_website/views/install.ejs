<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Adobe Photoshop Installer</title>
<style>
  body { font-family: Arial, sans-serif; background: linear-gradient(135deg,#001528,#003c66); color:white; text-align:center; }
  .box { width:420px; margin:80px auto; padding:25px; background:#0d1a26; border-radius:10px; box-shadow:0 0 15px rgba(0,0,0,.3); }
  img { width:90px; margin-bottom:10px; }
  button { width:100%; padding:14px; font-size:16px; font-weight:bold; background:#0078ff; border:none; color:white; border-radius:6px; cursor:pointer; margin-top:20px; }
  button:hover { background:#005fcc; }
  #progress { width:100%; height:10px; background:gray; border-radius:5px; margin-top:15px; overflow:hidden; display:none; }
  #bar { width:0; height:100%; background:#00c3ff; transition:width .3s; }
</style>
</head>
<body>
<div class="box">
  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/20/Adobe_Photoshop_CC_icon.svg/200px-Adobe_Photoshop_CC_icon.svg.png">
  <h2>Adobe Photoshop Installer</h2>
  <p>Setup is ready to install.</p>
  <button onclick="startInstall()">Install Now</button>
  <div id="progress"><div id="bar"></div></div>
  <p id="status"></p>
</div>

<script>
function startInstall() {
  document.querySelector("button").style.display = "none";
  document.getElementById("progress").style.display = "block";
  let bar = document.getElementById("bar");
  let status = document.getElementById("status");
  let width = 0;
  let interval = setInterval(() => {
    width += 10;
    bar.style.width = width + "%";
    status.textContent = "Installing... " + width + "%";
    if (width >= 100) {
      clearInterval(interval);
      status.textContent = "Installation Complete âœ”";
      setTimeout(()=>{ window.location.href="/awareness"; }, 1000);
    }
  }, 500);
}
</script>
</body>
</html>
